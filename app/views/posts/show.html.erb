<h1><%= @post.title %></h1>
 
 <div class="row">
   <div class="col-md-8">
       <%= image_tag(@post.featured_url) if @post.featured? %>

     <p><%= markdown(@post.body) %></p>
       <div>
       <h3>Comments</h3>
         <small> 
           <h4> Comments can be styled using Markdown. Thank you for participating! </h4>
         </small>

       <%= render @post.comments %>
       </div>
       <% if current_user %>
       <%= render 'comments/form', comment: Comment.new, post: @post %>
      <% end %>
   </div>
   <div class="col-md-4">

     <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
     <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
   </div>
 </div>
